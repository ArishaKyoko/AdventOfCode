{
  "name": "arishakyoko/aoc",
  "description": "This is my Advent of Code implementations in PHP",
  "authors": [{
    "name": "Franziska Frenzel",
    "email": "info@f-frenzel.de"
  }],
  "type": "project",
  "require": {
    "php": "~8.1"
  },
  "autoload": {
    "psr-4": {
      "AoC\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "AoCTest\\": "tests/"
    }
  },
  "require-dev": {
    "phpstan/phpstan": "^1.9",
    "phpunit/phpunit": "^9.5",
    "friendsofphp/php-cs-fixer": "~3.8"
  },
  "scripts": {
    "phpstan": "./vendor/bin/phpstan --memory-limit=512M analyse",
    "fix-style": "./vendor/bin/php-cs-fixer fix",
    "test-fast": "./vendor/bin/phpunit -c phpunit.xml"
  },
  "license": "MIT"
}
